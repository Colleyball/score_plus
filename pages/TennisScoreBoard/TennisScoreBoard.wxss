.contain{
  width: 100%;
  height: 100%;
  background:url('http://www.volleywang.cn/liansaiquan/images/matchbox/sb/bg.png') no-repeat;
  background-size: 100%;
  background-position: bottom;
  position: absolute;
}

.teamname{
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  height: 70rpx;
}

.teamA{
  height: 70rpx;
  line-height: 70rpx;
  width: 340rpx;
  border-radius: 0rpx;
  margin-left:0rpx;
  background: #011935;
  color: white
}

.vs{
  height: 70rpx;
  line-height: 70rpx;
  width: 70rpx;
  border-radius: 0rpx;
  font-size: 30rpx;
  background: #1Db0b8;
  color: white
}

.teamB{
  height: 70rpx;
  line-height: 70rpx;
  width: 345rpx;
  border-radius: 0rpx;
  background: #F01B2D;
  color: white
}

.teamscore{
  margin-top:20rpx;
  width: 750rpx;
  height:450rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  background: url('https://volleywang.cn/scoreboard/tennis_court.jpg') no-repeat;
  background-size: 100%;
}

.scoreA{
  height: 205rpx;
  line-height: 205rpx;
  width: 205rpx;
  margin-top: 123rpx;
  margin-left: 88rpx;
  font-size: 150rpx;
  background: rgba(255, 255, 255, 0.5)
}

.scoreB{
  height: 205rpx;
  line-height: 205rpx;
  width: 205rpx;
  margin-top: 123rpx;
  margin-left: 158rpx;
  font-size: 150rpx;
  background: rgba(255, 255, 255, 0.5)
}

.tips{
  position: relative;
  background-color: #ddf0ed;
  line-height: 70rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-left: auto;
  margin-right: auto;
  opacity: 0;
  margin-top: 250px;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
}

.scoreboard {
  margin-top:20rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column
}

.scoretitle {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  background: #00343F;
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  color:white
}

.playerone {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background: #011935;
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  color:white;
}

.playertwo {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background: #F01B2D;
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  color:white;
}

.name {
  text-align: center;
  width: 30%
}

.match-set {
  text-align: center;
  width:17.5%;
  border-left: 1rpx solid white;
}

.matchdetail {
  width: 700rpx;
  overflow:hidden;
  zoom:1;
  margin-left: 25rpx;
  height: 500rpx;
}

.matchdetail-socre {
  width: 50rpx;
  height: 130rpx;
  font-size: 30rpx;
  float: left;
  text-align: center;
}

.matchdetail-A {
  height: 65rpx;
  line-height: 65rpx;
}

.matchdetail-B {
  height: 65rpx;
  line-height: 65rpx;
}


.control{
  width: 100%;
  height: 300rpx;
  border-radius: 0;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
  position: fixed;
  bottom:0rpx;
  left:0rpx;
  background: #00343F
}

.control-area{
  width: 700rpx;
  margin-left: 25rpx;
  margin-top: 45rpx
}

.addscore{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-around
}

.add{
  width: 200rpx;
  height: 200rpx;
  border-radius: 0rpx;
  background: #ddf0ed;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  line-height: 200rpx;
  text-align: center;
  font-size: 100rpx;
  color: white;
  border: 10rpx solid #1Db0b8;
}

.reducescore{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.5);
}
  
.history{ 
  position: fixed;
  bottom:20rpx;
  right:20rpx;
  line-height: 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 38rpx;
  background-color: rgba(221, 240, 237, 0.6);
  color: rgba(0, 0, 0, 0.8);
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
  text-align: center;
}